generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


model Game {
  id          String   @id @default(uuid())
  title       String   @unique
  description String
  launchDate  DateTime
  urlPicture  String
  tags        String[]
  publisher   String
  studio      String
  price       Float
  reviews     Review[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Review {
  id          String   @id @default(uuid())
  description String
  timePlayed  Int      // tempo jogado em minutos
  createdAt   DateTime @default(now())
  game        Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)
  gameId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String

  @@index([gameId])
  @@index([userId])
}

model User {
  id                String   @id @default(uuid())
  name              String
  accountCreatedAt  DateTime @default(now())
  reviews           Review[]
}
